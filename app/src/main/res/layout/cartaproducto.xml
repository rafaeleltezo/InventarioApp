<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:elevation="@dimen/elevacionCarta">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagenCartaProducto"
                android:layout_width="@dimen/anchoImagenProducto"
                android:layout_height="@dimen/anchoImagenProducto" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/anchoImagenProducto"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/NombreCartaProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="nombre"
                    android:textSize="@dimen/nombreProducto"
                    android:textStyle="bold"
                    android:layout_marginTop="13dp"
                    android:layout_below="@+id/codigoProductoCarta"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/codigoProductoCarta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/codigo"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/PrecioCartaProducto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio"
                    android:layout_below="@+id/NombreCartaProducto"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="33dp"
                    android:layout_alignRight="@+id/codigoProductoCarta"
                    android:layout_alignEnd="@+id/codigoProductoCarta" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imagenCodigoQrCartaProducto"
                    android:layout_below="@+id/PrecioCartaProducto"
                    android:layout_margin="@dimen/activity_vertical_margin"/>
            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>
